<h1 class="text-black-10">News</h1>
<div class="row py-3">
    {{#each data}}
    <div class="col">
        <div class="float-start me-3">
            <div class="date text-white text-center rounded-4 py-1">
                <h3>{{date}}</h3>
            </div>
            <a href="?request=news/{{id}}" class="btn btb-link readmore ps-0">Read more</a>
        </div>
        <div>
            <h3>{{name}}</h3>
            <p>{{summary}}</p>
        </div>
    </div>
    {{/each}}
</div>